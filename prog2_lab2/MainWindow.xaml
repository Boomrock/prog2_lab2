<Window x:Class="prog2_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prog2_lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Window.Resources>
        <DataTemplate x:Key="listTemplate" >
            <StackPanel Margin="5">
                <Border BorderThickness="5" BorderBrush="{Binding Color}"  VerticalAlignment="Top">
                    <Image Height="750"  Source="{Binding Image}"/>
                </Border>
            </StackPanel>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="listPanelTemplate">
            <WrapPanel />
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="ImageList"
                 ItemTemplate="{StaticResource listTemplate}"
                 ItemsSource="{Binding Images}"
                 ItemsPanel="{StaticResource listPanelTemplate}"
                 SelectedItem="{Binding SelectedImages}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
    </Grid>
</Window>
